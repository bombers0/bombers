{
    "name": "bombers",
    "version": "0.1.0",
    "private": true,
    "workspaces": {
        "packages": [
            "packages/*"
        ]
    },
    "jest": {
        "rootDir": ".",
        "transform": {
            ".+\\.(css|scss)$": "<rootDir>/tests/ui/stylesMock.js",
            ".(ts|tsx)": "ts-jest"
        },
        "testRegex": "spec\\.tsx?$",
        "snapshotSerializers": [
            "enzyme-to-json/serializer"
        ],
        "setupFilesAfterEnv": [
            "<rootDir>/tests/ui/setupEnzyme.ts"
        ]
    },
    "scripts": {
        "test": "jest --testEnvironment=node",
        "dev:client": "yarn workspace @bombers/client dev",
        "dev:app-server": "yarn workspace @bombers/app-server dev",
        "dev:game-server": "yarn workspace @bombers/game-server dev",
        "prod:client": "yarn workspace @bombers/client build",
        "prod:app-server": "yarn workspace @bombers/app-server serve",
        "prod:game-server": "yarn workspace @bombers/game-server serve"
    },
    "devDependencies": {
        "@types/enzyme": "^3.10.8",
        "@types/enzyme-adapter-react-16": "^1.0.6",
        "@types/jest": "^26.0.22",
        "enzyme": "^3.11.0",
        "enzyme-adapter-react-16": "^1.15.6",
        "enzyme-to-json": "^3.6.2",
        "jest": "^26.6.3",
        "ts-jest": "^26.5.6"
    },
    "dependencies": {
        "@types/react": "^17.0.9",
        "@types/react-dom": "^17.0.3",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "redux-mock-store": "^1.5.4"
    }
}
